{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@repo/typescript/nestjs.tsconfig",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
