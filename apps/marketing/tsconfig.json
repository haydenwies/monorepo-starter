{
    "compilerOptions": {
        /* Environment */
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "target": "esnext",
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,

        /* Bundler */
        "moduleResolution": "bundler",
        "noEmit": true,

        /* Best practices */
        "strict": true,
        "skipLibCheck": true,

        /* TODO - handle leftover props from original version of file */
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "incremental": true,
        "isolatedModules": true,
        "plugins": [{ "name": "next" }],
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".next/dev/types/**/*.ts", "**/*.mts"],
    "exclude": ["node_modules"]
}
