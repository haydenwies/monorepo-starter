{
    "name": "@repo/ui",
    "private": true,
    "scripts": {
        "typecheck": "tsc --noEmit",
        "build": "tsc"
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.2.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.3.1"
    },
    "devDependencies": {
        "@repo/typescript": "workspace:*",
        "@types/react": "catalog:",
        "@types/react-dom": "catalog:",
        "typescript": "catalog:"
    },
    "peerDependencies": {
        "react": "catalog:",
        "react-dom": "catalog:"
    },
    "exports": {
        "./components/*": {
            "types": "./src/components/*.tsx",
            "default": "./dist/components/*.js"
        },
        "./hooks/*": {
            "types": "./src/hooks/*.ts",
            "default": "./dist/hooks/*.js"
        },
        "./lib/*": {
            "types": "./src/lib/*.ts",
            "default": "./dist/lib/*.js"
        }
    }
}
