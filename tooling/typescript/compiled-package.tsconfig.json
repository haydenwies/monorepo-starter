{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.tsconfig",
    "compilerOptions": {
        /* Emit */
        "declaration": true,
        "declarationMap": true,
        "isolatedModules": true,
        "outDir": "${configDir}/dist",
        "removeComments": true,
        "sourceMap": true,
        "tsBuildInfoFile": "${configDir}/node_modules/.tmp/tsconfig.tsbuildinfo"
    }
}
