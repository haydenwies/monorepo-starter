{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.tsconfig",
    "compilerOptions": {
        /* Environment */
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "jsx": "react-jsx",

        /* Bundler */
        "noEmit": true,

        /* Emit */
        "tsBuildInfoFile": "node_modules/.tmp/tsconfig.tsbuildinfo",

        /* Next.js specific */
        "plugins": [{ "name": "next" }]
    }
}
