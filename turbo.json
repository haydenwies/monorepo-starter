{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "//#format": {
            "cache": false
        },
        "//#lint": {
            "cache": false
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^build", "^typecheck"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        }
    }
}
